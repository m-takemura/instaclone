<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-9">
    <p class="flash"><%= notice %><%= alert %></p>
      <!-- <div class="timeline"> -->
        <div class="row post-block">
          <%= form_for(@photo) do |f| %>
            <%= f.file_field :picture %>
            <%= f.hidden_field :picture_cache %>
            <%= f.text_area :content, class:"form-control" %>
            <br>
            <%= f.submit "投稿", class:"btn btn-default btn-sm btn-primary pull-right"%>
          <% end %>
        </div>

        <% @photos.each do |photo| %>
          <div class="row tweet-block">
            <div class="blog-author">
              <%= profile_img(photo.user) %>
              <%= photo.user.name %>
            </div>

            <div class="blog-picture">
              <%= photo_img(photo)if photo_img(photo) %>
            </div>

            <div class="blog-content">
              <p><%= simple_format(photo.content) %></p>
              <div class="right">
                  <%= link_to "編集", edit_photo_path(photo.id), class: 'btn btn-default btn-sm btn-success pull-right' %>
                  <%= link_to '削除', photo_path(photo.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default btn-sm btn-danger pull-right' %>
              </div>
            </div>

          </div>
        <% end %>
      <!-- </div> -->
  </div>
</div>
